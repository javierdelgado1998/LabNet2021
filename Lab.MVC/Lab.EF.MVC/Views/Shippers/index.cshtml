@model List<Lab.EF.MVC.Models.ShippersView>
@{

    ViewBag.Title = "Shippers";

}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<h2>Primo's Shippers Company</h2>
<nav class="navbar navbar-light bg-light">
    <form class="form-inline">
        @Html.ActionLink("Select Top(3)", "index", new { value = 3 }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Get All", "index", "", new { @class = "btn btn-primary" })
    </form>
</nav>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shipper in Model)
            {
                <tr>
                    <th scope="row">@shipper.Id</th>
                    <td>@shipper.CompanyName</td>
                    <td>@shipper.Phone</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = shipper.Id }, new { @class = "btn btn-danger", onclick="return confirm('Delete this?')" })</td>
                    <td>@Html.ActionLink("Update", "InsertUpdate", new { id = shipper.Id, @class = "ShipperView" }, new { @class = "btn btn-info" })</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Insert New", "InsertUpdate", "", new { @class = "btn btn-success" })
    </div>
